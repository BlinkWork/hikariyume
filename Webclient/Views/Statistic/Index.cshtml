@model IEnumerable<Webclient.Models.Product>

@{
    ViewData["Title"] = "Product List";
    Layout = "_ManageLayout";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Size</th>
            <th>Origin</th>
            <th>Color</th>
            <th>Age</th>
            <th>Material</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Category Id</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.Image" alt="@item.Name" width="50" /></td>
                <td>@item.Name</td>
                <td>@item.Size</td>
                <td>@item.Origin</td>
                <td>@item.Color</td>
                <td>@item.Age</td>
                <td>@item.Material</td>
                <td>@item.Price</td>
                <td>@item.StockQuantity</td>
                <td>@item.CategoryId</td>
                <td>@item.CreatedAt?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", new { id = item.ProductId })" class="btn btn-info">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.ProductId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Product</a>
