@model Webclient.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "_ManageLayout";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">@Model.Image</dd>

        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>

        <dt class="col-sm-2">Origin</dt>
        <dd class="col-sm-10">@Model.Origin</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Material</dt>
        <dd class="col-sm-10">@Model.Material</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Category Id</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>


<a asp-action="Index" class="btn btn-secondary">Back to List</a>
