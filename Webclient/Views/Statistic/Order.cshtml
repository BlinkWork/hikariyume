@{
    Layout = "_ManageLayout";
}
@model IEnumerable<Webclient.Models.Order>

<h1>Order Management</h1>
<a asp-action="CreateOrder" class="btn btn-primary">Create New Order</a>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.User?.Username</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td>@order.CreatedAt?.ToString("g")</td>
                <td>
                    <a asp-action="DetailOrder" asp-route-id="@order.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="EditOrder" asp-route-id="@order.OrderId" class="btn btn-warning">Edit</a>
@*                     <form asp-action="DeleteOrder" asp-route-id="@order.OrderId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                    </form> *@
                </td>
            </tr>
        }
    </tbody>
</table>
