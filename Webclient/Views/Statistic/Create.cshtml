@model Webclient.Models.Product

@{
    ViewData["Title"] = "Create Product";
    Layout = "_ManageLayout";
    List<Category> list = (List<Category>)ViewData["categoryList"];
}
<style>
    .quantrong {
        color: red;
    }
</style>
<h2>Create Product</h2>

<form asp-action="Create" enctype="multipart/form-data">
    @*   <div class="form-group">
    <label asp-for="Image"></label>
    <input asp-for="Image" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
    </div>     *@
    <div class="form-group">
        <label for="Image">Ảnh <span class="quantrong">*</span></label>
        <input type="file" name="ImageFile" accept=".jpg,.png" class="form-control"/>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Tên <span class="quantrong">*</span></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Size">Kích thước</label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Origin">Xuất sứ</label>
        <input asp-for="Origin" class="form-control" />
        <span asp-validation-for="Origin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Color">Màu sắc</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Age">Độ mới</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Material">Chất liệu</label>
        <input asp-for="Material" class="form-control" />
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Giá <span class="quantrong">*</span></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="StockQuantity">Số lượng tồn kho <span class="quantrong">*</span></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CategoryId">Loại <span class="quantrong">*</span></label>

        <select asp-for="CategoryId" class="form-control">
            @foreach (Category category in list)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary m-auto">Tạo</button>
</form>

