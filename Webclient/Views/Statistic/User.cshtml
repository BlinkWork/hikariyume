@model IEnumerable<Webclient.Models.User>
@{
    Layout = "_ManageLayout";
}
<h1>User Management</h1>
<a asp-action="CreateUser" class="btn btn-primary">Create New User</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="DetailUser" asp-route-id="@user.UserId" class="btn btn-info">Details</a>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
