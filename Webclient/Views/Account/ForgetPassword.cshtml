@{
    ViewData["Title"] = "Quên mật khẩu";
}

<style>
     body {
       background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
       font-family: 'Poppins', sans-serif;
     }

     .card {
       backdrop-filter: blur(10px);
       background-color: rgba(255, 255, 255, 0.8);
       transition: all 0.3s ease;
     }

     .card:hover {
       transform: translateY(-5px);
       box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
     }

     .btn-primary {
       background-color: #4e54c8;
       border-color: #4e54c8;
       transition: all 0.3s ease;
     }

     .btn-primary:hover {
       background-color: #3f4499;
       border-color: #3f4499;
       transform: translateY(-2px);
       box-shadow: 0 5px 15px rgba(78, 84, 200, 0.4);
     }

     .form-control:focus {
       border-color: #4e54c8;
       box-shadow: 0 0 0 0.2rem rgba(78, 84, 200, 0.25);
     }

     .card-body {
       animation: fadeIn 0.5s ease-out;
     }
</style>

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">Bạn quên mật khẩu?</h2>
                <p class="text-muted text-center mb-4">Nhập địa chỉ email vào đây và chúng tôi sẽ gửi link đổi mật khẩu cho bạn.</p>
                <form method="post" asp-action="RequestForgetPassword" id="forgotPasswordForm">
                    <div class="form-floating mb-3">
                        <input name="email" type="email" class="form-control" id="emailInput" placeholder="name@gmail.com" required>               
                        <span class="text-danger">@ViewData["error"]</span>

                        <label for="emailInput">Địa chỉ email</label>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" type="submit" id="submitBtn">
                            <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                            Cài lại mật khẩu
                        </button>
                    </div>                
                    <span class="text-info">@ViewData["Information"]</span>
                </form>
                <div class="text-center mt-4">
                    <a href="/Account/Login" class="text-decoration-none">Quay trở lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>