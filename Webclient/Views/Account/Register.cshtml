@{
    Layout = "";
}
@model RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            background-image: url('/placeholder.svg?height=1080&width=1920');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .register-container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            margin: 20px;
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

            .logo h1 {
                font-size: 2.5rem;
                color: #333;
            }

            .logo span {
                color: #dc3545;
            }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

        .btn-primary {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="logo">
            <h1><img src="/img/exeLogo.png" class="logoIcon" width="64" height="64" /> <span>Hikari Yume</span></h1>
            @ViewBag.Message
        </div>
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label for="fullname" class="form-label">Họ và tên</label>
                <input asp-for="FullName" type="text" class="form-control" id="fullname" placeholder="Nhập đầy đủ tên của bạn vào đây" required>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Địa chỉ email</label>
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Nhập địa chỉ email vào đây" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Tên tài khoản</label>
                <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Nhập đầy tên tài khoản của bạn vào đây" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Nhập mật khẩu vào đây" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Nhập mật khẩu một lần nữa ở đây" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ</label>
                <input asp-for="Address" class="form-control" id="address" placeholder="Nhập địa chỉ ở đây" required>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="phonenumber" class="form-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" id="phonenumber" placeholder="Nhập số điện thoại ở đây" required>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="termsAgreement" required>
                <label class="form-check-label" for="termsAgreement">Đồng ý với <a href="#">Điều khoản và điều lệ</a></label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
        </form>
        <div class="login-link">
            <p>Đã có tài khoản? <a href="/Account/Login">Đăng nhập ở đây</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
