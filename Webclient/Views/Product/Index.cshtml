@{
    ViewData["Title"] = "Sản phẩm";
    string categoryName = ViewData["categoryName"] as string;
}
<style>
    .category-header {
        background-color: #dc3545;
        color: white;
        padding: 40px 0;
        margin-bottom: 30px;
    }
</style>
<header class="category-header">
    <div class="container">
        <h1 class="display-4">@categoryName</h1>
        <p class="lead">Khám phá bộ sưu tập @categoryName.ToLower() đa dạng của chúng tôi</p>
    </div>
</header>
<div class="row mb-4">
    <div class="col-md-6">
        <p>Hiển thị 1-12 trong số 36 sản phẩm</p>
    </div>
    <div class="col-md-6 text-md-end">
        <select class="form-select d-inline-block w-auto">
            <option>Sắp xếp theo mặc định</option>
            <option>Giá: Thấp đến cao</option>
            <option>Giá: Cao đến thấp</option>
            <option>Mới nhất</option>
        </select>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <div class="col">
        <div class="card product-card h-100">
            <img src="/placeholder.svg?height=200&width=300" class="card-img-top product-image" alt="Bát cơm gốm">
            <div class="card-body">
                <h5 class="card-title">Bát cơm gốm</h5>
                <p class="card-text">Bát cơm gốm truyền thống Nhật Bản, hoàn hảo cho bữa ăn hàng ngày.</p>
                <p class="card-text"><strong>250.000₫</strong></p>
                <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card product-card h-100">
            <img src="/placeholder.svg?height=200&width=300" class="card-img-top product-image" alt="Bát mì ramen">
            <div class="card-body">
                <h5 class="card-title">Bát mì ramen</h5>
                <p class="card-text">Bát lớn hoàn hảo cho món mì ramen nóng hổi của bạn.</p>
                <p class="card-text"><strong>300.000₫</strong></p>
                <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card product-card h-100">
            <img src="/placeholder.svg?height=200&width=300" class="card-img-top product-image" alt="Bộ bát đa năng">
            <div class="card-body">
                <h5 class="card-title">Bộ bát đa năng</h5>
                <p class="card-text">Bộ 4 bát đa năng với các kích cỡ khác nhau cho mọi nhu cầu.</p>
                <p class="card-text"><strong>500.000₫</strong></p>
                <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card product-card h-100">
            <img src="/placeholder.svg?height=200&width=300" class="card-img-top product-image" alt="Bát salad gỗ">
            <div class="card-body">
                <h5 class="card-title">Bát salad gỗ</h5>
                <p class="card-text">Bát salad bằng gỗ tự nhiên, mang lại vẻ đẹp rustic cho bàn ăn.</p>
                <p class="card-text"><strong>350.000₫</strong></p>
                <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card product-card h-100">
            <img src="/placeholder.svg?height=200&width=300" class="card-img-top product-image" alt="Bát súp miso">
            <div class="card-body">
                <h5 class="card-title">Bát súp miso</h5>
                <p class="card-text">Bát súp miso truyền thống với nắp đậy, giữ súp nóng lâu hơn.</p>
                <p class="card-text"><strong>200.000₫</strong></p>
                <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card product-card h-100">
            <img src="/placeholder.svg?height=200&width=300" class="card-img-top product-image" alt="Bát đựng gia vị">
            <div class="card-body">
                <h5 class="card-title">Bát đựng gia vị</h5>
                <p class="card-text">Bộ 3 bát nhỏ đựng gia vị, hoàn hảo cho bàn ăn của bạn.</p>
                <p class="card-text"><strong>150.000₫</strong></p>
                <a href="#" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation" class="my-5">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
        </li>
        <li class="page-item active" aria-current="page">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Sau</a>
        </li>
    </ul>
</nav>