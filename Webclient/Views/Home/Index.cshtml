@{
    ViewData["Title"] = "Hikari Yumi - Japanese Tableware";
}

<style>
    .bg-custom {
        background-color: #f8f9fa;
    }

    .text-custom {
        color: #212529;
    }

    .hero-section {
        background-image: url('/img/homepage-banner.jpg');
        background-size: cover;
        background-position: center;
    }

    .product-img {
        height: 12rem;
        object-fit: cover;
    }
</style>
<!-- Hero Section -->
<section class="hero-section py-5 text-center text-white">
    <div class="container">
        <h1 class="display-5 fw-bold">Nâng cao trải nghiệm ăn uống của bạn</h1>
        <p class="lead mb-4">Khám phá vẻ đẹp của đồ dùng trên bàn ăn Nhật Bản đích thực</p>
        <a href="/Product" class="btn btn-danger btn-lg">Mua sắm ngay</a>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Sản phẩm</h2>
        <div class="row g-4">
            <!-- Product 1 -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <img src="/placeholder.svg?height=300&width=300" class="card-img-top product-img" alt="Ceramic Rice Bowl">
                    <div class="card-body">
                        <h5 class="card-title">Ceramic Rice Bowl</h5>  
                        <p class="card-text"><strong>250.000₫</strong></p>
                        <a href="#" class="btn btn-dark w-100">Add to Cart</a>
                    </div>
                </div>
            </div>
            <!-- Product 2 -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <img src="/placeholder.svg?height=300&width=300" class="card-img-top product-img" alt="Sakura Plate Set">
                    <div class="card-body">
                        <h5 class="card-title">Sakura Plate Set</h5>
                        <p class="card-text"><strong>250.000₫</strong></p>
                        <a href="#" class="btn btn-dark w-100">Add to Cart</a>
                    </div>
                </div>
            </div>
            <!-- Product 3 -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <img src="/placeholder.svg?height=300&width=300" class="card-img-top product-img" alt="Matcha Tea Cup">
                    <div class="card-body">
                        <h5 class="card-title">Matcha Tea Cup</h5>
                        <p class="card-text"><strong>250.000₫</strong></p>
                        <a href="#" class="btn btn-dark w-100">Add to Cart</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

